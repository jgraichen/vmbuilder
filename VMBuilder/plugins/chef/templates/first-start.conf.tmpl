# chef-setup - chef client initial start

description     "chef-client"

start on net-device-up
stop on runlevel [!2345]

script
    sleep 5
#if $environment
    chef-client -E $environment -j /etc/chef/first-boot.json -L /var/log/chef/chef-setup.log || exit 1
#else
    chef-client -j /etc/chef/first-boot.json -L /var/log/chef/chef-setup.log || exit 1
#end if
    rm -f /etc/init/chef-setup.conf /etc/chef/first-boot.json
    exit 0
end script
